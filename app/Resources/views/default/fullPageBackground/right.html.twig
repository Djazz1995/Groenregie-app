{# full page background #}
  <div class="full-page-background" style="height: 100vh">
  </div>

  <div class="container-fluid pb-full-page">
    <div class="row">
        <div class="col-xs-12 col-md-6 offset-lg-1 col-lg-5 d-flex justify-content-center row flex-wrap-wrap">
        {% if withFoto is defined and withFoto is not null %}
          <div class="col-xs-12 col-md-12 col-lg-6 floating-image-right ">
            <img src="./images/John_Zoete.jpg" width="250">
          </div>
          <div class="col-xs-12 col-md-12 col-lg-6 floating-quote ">
            <span class="quote">"{{quote}}"</span>
            <br>
            <span class="quote">{{quoteAuthor}}</span>
          </div>
        {% endif %}
        </div>

      <div class="offset-xs-1 col-xs-12 offset-md-1 col-md-5  offset-lg-1 col-lg-4 floating-text-left mt-5">
        <div>
          <h2>{{pageHeader}}</h2>
        </div>
        <div class="green-outline">
          {{content|markdown}}
          {% if contentAuthor is defined and contentAuthor is not null %}
          <p class="quote">
            {{contentAuthor}}
          </p>
          {% endif %}
        </div>
      </div>

    </div>
  </div>
  {# end full page background #}