{% extends 'base.html.twig' %}

{% block stylesheets %}
  <link rel="stylesheet" href="./css/general.css" />
  <link rel="stylesheet" href="./css/navbar.css" />
  <link rel="stylesheet" href="./css/homepage.css" />
  <link rel="stylesheet" href="./css/about-us.css" />
  <link href="https://fonts.googleapis.com/css?family=Caveat" rel="stylesheet">
{% endblock stylesheets %}

{% block title %}{{pageTitle}}{% endblock title %}

{% block body %}
{# <hr class="nav-seperator"> #}

  <nav class="navbar navbar-expand-lg navbar-light bg-light justify-content-center subnav-bar">
    <div id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto text-center">
        <li class="nav-item active">
          <a class="nav-link white px-5" href="#">Visie</a>
        </li>
        <li class="nav-item">
          <a class="nav-link white px-5" href="#">Tuinontwerp</a>
        </li>
        <li class="nav-item">
          <a class="nav-link white px-5" href="#">Tuinaanleg</a>
        </li>
        <li class="nav-item">
          <a class="nav-link white px-5" href="#">Tuinonderhoud</a>
        </li>
      </ul>
    </div>
  </nav>

  {# full page background #}
  <div class="full-page-background" style="height: 100vh">
  </div>

  <div class="container-fluid pb-full-page">
    <div class="row">
      <div class="offset-xs-1 col-xs-12 offset-md-1 col-md-5  offset-lg-1 col-lg-4 floating-text-left mt-5">
        <div>
          <h2>{{pageHeader}}</h2>
        </div>
        <div class="green-outline">
          {{content|markdown}}
          <p class="quote">
            {{contentAuthor}}
          </p>
        </div>
      </div>

      <div class="col-xs-12 col-md-6 offset-lg-1 col-lg-5 d-flex justify-content-center row flex-wrap-wrap">
        <div class="col-xs-12 col-md-12 col-lg-6 floating-image-right ">
          <img src="./images/John_Zoete.jpg" width="250">
        </div>
        <div class="col-xs-12 col-md-12 col-lg-6 floating-quote ">
          <span class="quote">"{{quote}}"</span>
          <br>
          <span class="quote">{{quoteAuthor}}</span>
        </div>
      </div>
    </div>
  </div>


  {# end full page background #}
  {# <!-- JUMBOTRON -->
  <div class="jumbotron jumbotron-fluid align-center transparent white padding-bottom-15 reduced-jumbotron">
    <div class="container">
      <h2>{{pageHeader}}</h2>
    </div>
  </div>
  <!-- END JUMBOTRON -->

  <!-- content -->
  <div class="container content">
    <div class="row">
      <div class="col-xs-12 offset-xs-0 col-md-10 offset-md-1">
        {{content|markdown}}
        <p class="quote">
          {{contentAuthor}}
        </p>
      </div>
    </div>

    <div class="row about-us-image-quote">
      <div class="about-us-image">
        <img src="./images/John_Zoete.jpg" width="250">
      </div>
      <div class="about-us-quote align-self-center">
        <span class="quote">"{{quote}}"</span>
        <br>
        <span class="quote">{{quoteAuthor}}</span>
      </div>
    </div>
  </div>
  <!-- end content --> #}


{% endblock body %}

{% block javascripts %}

{% endblock javascripts %}