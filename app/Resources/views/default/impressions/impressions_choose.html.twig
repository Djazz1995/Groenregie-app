            >
                <div class="choose-card-body px-3 py-2">
                    <div style="flex: 5;">
                        <h3 class="w-100 text-center pt-1"><b>{{ entry.getModerneTuinenKeuzeMenuTitle() }}</b></h3>
                        <p>
                            {{ entry.moderneTuinenKeuzeMenuTekst() }}
                        </p>
                    </div>
                    <div class="text-center mt-5 mb-1" style="flex: 1;">
                        <a class="green-button" href={{path('impressions_modern_gardens')}}>- bekijk projecten -</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-sm-6 col-md-6 col-lg-4">
