{% extends 'base.html.twig' %}

{% block stylesheets %}
  <link rel="stylesheet" href="/css/general.css" />
  <link rel="stylesheet" href="/css/navbar.css" />
  <link rel="stylesheet" href="/css/homepage.css" />
  <link rel="stylesheet" href="/css/about-us.css" />
  <link rel="stylesheet" href="/css/card.css" />
  <link href="https://fonts.googleapis.com/css?family=Caveat" rel="stylesheet">
{% endblock stylesheets %}

{% block title %}{{pageTitle}}{% endblock title %}

{% block body %}
  {# <div class="full-page-background" style="height: 100vh">
  </div> #}

<div class="py-5">
    <div class="container-fluid">
      <div class="row">

        <div class="col-sm-6 col-md-6 col-lg-4">
          <a href={{path('impressions_modern_gardens')}}>
            <div class="card mb-4 shadow-sm with-background" 
                style="background: url({{entry.getModerneTuinenFoto().file.url}}) no-repeat center center; background-size: cover"
            >
                <div class="choose-card-body px-3 py-2">
                    <h3 class="w-100 text-center pt-1"><b>{{ entry.getModerneTuinenKeuzeMenuTitle() }}</b></h3>
                    <div>
                        <p>
                            {{ entry.moderneTuinenKeuzeMenuTekst() }}
                        </p>
                    </div>
                </div>
            </div>
          </a>
        </div>

        <div class="col-sm-6 col-md-6 col-lg-4">
          <a href={{path('impressions_nature_gardens')}}>
            <div class="card mb-4 shadow-sm with-background" style="background: url({{entry.getNatuurlijkeTuinenFoto().file.url}}) no-repeat center center; background-size: cover">
                <div class="choose-card-body px-3 py-2">
                    <h3 class="w-100 text-center pt-1"><b>{{ entry.getNatuurlijkeTuinenKeuzeMenuTitle() }}</b></h3>
                    <div>
                        <p>
                            {{ entry.getNatuurlijkeTuinenKeuzeMenuTekst() }}
                        </p>
                    </div>
                </div>
            </div>
          </a>
        </div>

        <div class="col-sm-12 col-md-12 col-lg-4">
            <a href={{path('impressions_roof_gardens')}}>
                <div class="card mb-4 shadow-sm with-background" style="background: url({{entry.getDakTuinenFoto().file.url}}) no-repeat center center; background-size: cover">
                    <div class="choose-card-body px-3 py-2">
                        <h3 class="w-100 text-center pt-1"><b>{{ entry.getDakTuinenKeuzeMenuTitle() }}</b></h3>
                        <div>
                            <p>
                                {{ entry.getDakTuinenKeuzeMenuTekst() }}
                            </p>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

{% endblock body %}

{% block javascripts %}

{% endblock javascripts %}