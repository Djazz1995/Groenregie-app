{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href={{ asset('css/general.css') }} />
    <link rel="stylesheet" href={{ asset('css/navbar.css') }} />
    <link rel="stylesheet" href={{ asset('css/homepage.css') }} />
    <link rel="stylesheet" href={{ asset('css/our-partner.css') }} />
{% endblock stylesheets %}

{% block title %}{{pageTitle}}{% endblock title %}

{% block body %}
<div class="nav-seperator"></div>

<!-- JUMBOTRON -->
    <div class="jumbotron jumbotron-fluid transparent white padding-bottom-15 reduced-jumbotron" style="z-index: 99">
        <div class="container">
            <h2>{{pageHeader}}</h2>
            {% if pageHeader is not null %}
            <p class="lead">
                {{pageSubHeader}}       
            </p> 
            {% endif %}
        </div>
    </div>
    <!-- END JUMBOTRON -->

      <!-- container content -->
        <div class="container content">
            {% for partner in partners %}
                <div class="row our-partner-media">
                    <div class="col-md-4 col-sm-12">
                        <img class="mr-0" src={{partner.thumbnail.file.url}} alt={{partner.thumbnail.title}} title={{partner.thumbnail.title}}>
                    </div>
                    <div class="col-md-8 col-sm-12">
                        <h3 class="mt-2">{{partner.naam}}</h3>
                        {{partner.korteText|markdown}}
                        <p>
                            <a href={{path('our_partners_specific', {'name': partner.urlNaam, 'id': partner.id})}} class="btn btn-outline-primary float-right groenregie-green groenregie-button more-info">Meer info</a>
                        </p>
                    </div>
                </div>
			{% endfor %}
        </div>
      <!-- end fluid content -->
{% endblock body %}

{% block javascripts %}

{% endblock javascripts %}