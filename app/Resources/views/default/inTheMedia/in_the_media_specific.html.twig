{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href={{ asset('css/general.css') }} />
    <link rel="stylesheet" href={{ asset('css/navbar.css') }} />
    <link rel="stylesheet" href={{ asset('css/homepage.css') }} />
    <link rel="stylesheet" href={{ asset('css/about-us.css') }} />
{% endblock stylesheets %}

{% block title %}{{pageTitle}}{% endblock title %}

{% block body %}
    <hr class="nav-seperator">

    <!-- JUMBOTRON -->
    <div class="jumbotron jumbotron-fluid align-center transparent white padding-bottom-15 reduced-jumbotron">
        <div class="container">
        <h2>{{pageHeader}}</h2>
        </div>
    </div>
    <!-- END JUMBOTRON -->

    <!-- content -->
        <div class="container content">
        <div class="row">
            <div class="col-xs-12 offset-xs-0 col-md-10 offset-md-1">
            <div class="top-foto col-xs-12 col-md-8 offset-md-2">
                <img src={{thumbnail.file.url}} width="100%;" />
            </div>
            {{fullContent|markdown}}
            {% if pdf is not null %}
            <p>
                <a class='groenregie-green website-url' href={{pdf.file.url}} target='_blank'>Lees het gehele artikel</a>
            </p>
            {% endif %}
            <p>
                <a class="btn btn-outline-primary float-left groenregie-green groenregie-button back-button" href={{path('news_updates')}}>Terug</a>
            </p>
            </div>
        </div>
        </div>
    <!-- end content -->
{% endblock body %}

{% block javascripts %}

{% endblock javascripts %}