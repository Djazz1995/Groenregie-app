<footer>
    <div class="container-fluid">
        <div class="row">
            <div class="col d-flex">
                <div class="d-flex flex-wrap">
                    {% if fbUrl is not null %}    
                        <a href={{fbUrl}}><i class="fab fa-facebook-f fb-color"></i></a>
                    {% endif %}
                    {% if instaUrl is not null %}
                        <a href={{instaUrl}}><i class="fab fa-instagram insta-color"></i></a>
                    {% endif %}
                    {% if linUrl is not null %}
                        <a href={{linUrl}}><i class="fab fa-linkedin-in lin-color"></i></a>
                    {% endif %}
                </div>
                <div class="d-flex flex-wrap">
                    <span class='d-block align-self-center'>{{companyName}} Â© 2018</span>
                    <span class="mobile-hidden">|</span>
                    <span >{{address}} {{zipcode}} {{city}}</span>
                    <span class="mobile-hidden">|</span>
                    <span>T {{tel}}</span>
                    <span class="mobile-hidden">|</span>
                    <span>{{email}}</span>
                    <span class="mobile-hidden">|</span>
                    <span><a href={{path('privacy_declaration')}} class="green-link">Privacy overeenkomst</a></span>
                    <span class="mobile-hidden">|</span>
                    <span><a href={{path('general_declaration')}} class="green-link">Algemene Voorwaarden</a></span>
                </div>
            </div>
            <div class="float-right">
                <span class="mr-3">Lid van <a class="green-link" target="_blank" href="https://www.vhg.org/">VHG</a></span>
                <img class="mr-3" src={{ asset('images/vhg.png') }}  height="20" />
            </div>
        </div>
    </div>
</footer>